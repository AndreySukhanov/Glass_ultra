{
    "name": "glass-ultra",
    "productName": "Glass Ultra",
    "version": "1.0.0",
    "description": "Open-source AI desktop assistant - Fork of CheatingDaddy",
    "main": "src/index.js",
    "scripts": {
        "setup": "npm install && npm start",
        "start": "npm run build:renderer && electron .",
        "start:utf8": "chcp 65001 && npm run build:renderer && electron .",
        "package": "npm run build:renderer && electron-builder --dir",
        "make": "npm run build:renderer && electron-forge make",
        "build": "npm run build:renderer && electron-builder --config electron-builder.yml --publish never",
        "build:win": "npm run build:renderer && electron-builder --win --x64 --publish never",
        "publish": "npm run build:renderer && electron-builder --config electron-builder.yml --publish always",
        "lint": "eslint --ext .js src/",
        "lint:fix": "eslint --ext .js src/ --fix",
        "postinstall": "electron-builder install-app-deps",
        "build:renderer": "node build.js",
        "watch:renderer": "node build.js --watch"
    },
    "keywords": [
        "glass",
        "ai assistant",
        "real-time",
        "live summary",
        "contextual ai",
        "rag",
        "desktop ai"
    ],
    "author": {
        "name": "Glass Ultra Team"
    },
    "license": "GPL-3.0",
    "dependencies": {
        "@anthropic-ai/sdk": "^0.56.0",
        "@deepgram/sdk": "^4.9.1",
        "@google/genai": "^1.8.0",
        "@google/generative-ai": "^0.24.1",
        "axios": "^1.10.0",
        "better-sqlite3": "^9.6.0",
        "cors": "^2.8.5",
        "dotenv": "^17.0.0",
        "electron-squirrel-startup": "^1.0.1",
        "electron-store": "^8.2.0",
        "electron-updater": "^6.6.2",
        "express": "^4.18.2",
        "firebase": "^11.10.0",
        "firebase-admin": "^13.4.0",
        "hnswlib-node": "^3.0.0",
        "jsonwebtoken": "^9.0.2",
        "keytar": "^7.9.0",
        "mammoth": "^1.11.0",
        "node-fetch": "^2.7.0",
        "openai": "^4.70.0",
        "pdf-parse": "^1.1.1",
        "portkey-ai": "^1.10.1",
        "react-hot-toast": "^2.5.2",
        "sharp": "^0.34.2",
        "validator": "^13.11.0",
        "vectra": "^0.11.1",
        "wait-on": "^8.0.3",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@electron/fuses": "^1.8.0",
        "@electron/notarize": "^2.5.0",
        "electron": "^30.5.1",
        "electron-builder": "^26.0.12",
        "electron-reloader": "^1.2.3",
        "esbuild": "^0.25.5",
        "eslint": "^9.37.0",
        "prettier": "^3.6.2"
    },
    "optionalDependencies": {
        "electron-liquid-glass": "^1.0.1"
    }
}
